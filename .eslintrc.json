{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "eqeqeq": "error",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          { "group": ["/.*"], "message": "Use `@/` for local imports." }
        ],
        "paths": [
          {
            "name": "zod",
            "importNames": ["default", "z"],
            "message": "Use `import z from \"@/api/zod\"` instead for consistent extensions."
          }
        ]
      }
    ]
  }
}
